{
	"name": "@foundry/metal",
	"version": "0.10.5-beta",
	"homepage": "https://metal.reddfive.com",
	"bugs": {
		"url": "https://git.reddfive.com/ux-engineering/metal/-/issues"
	},
	"scripts": {
		"dev": "vite dev --host",
		"dev:tokens": "style-dictionary build --config src/lib/metal/tokens/config.cjs",
		"build": "vite build && npm run package",
		"build:tokens": "node ./src/lib/design-tokens/build-tokens.cjs",
		"build:css": "sass --style=compressed --no-source-map src/lib/metal/scss:src/lib/metal/css",
		"preview": "vite preview",
		"package": "npm run build:css && svelte-kit sync && svelte-package --input src/lib/metal && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier . --check .",
		"format": "prettier . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./css/*.css": "./dist/css/*.css",
		"./scss/*.scss": "./dist/scss/*.scss",
		"./fonts/*.ttf": "./dist/fonts/*.ttf"
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^4.1.2"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.25.1",
		"@sveltejs/package": "^2.2.2",
		"mdsvex": "^0.11.0",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.2.0",
		"sass": "^1.65.1",
		"style-dictionary": "^3.8.0",
		"svelte": "^4.2.1",
		"svelte-check": "^3.2.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	},
	"dependencies": {
		"highlight.js": "^11.8.0",
		"lucide-svelte": "^0.265.0",
		"remark-heading-id": "^1.0.1"
	},
	"type": "module"
}
